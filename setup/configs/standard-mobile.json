{
  "name": "Standard Mobile Configuration",
  "description": "Mobile-focused setup for React Native/Expo projects - feature → dev → main",
  "projectType": "mobile",
  "branchingStrategy": "standard",
  "branches": ["main", "dev"],
  "workflows": {
    "enabled": [
      "bootstrap",
      "reusable-pr-checks",
      "pr-into-dev",
      "dev-to-main",
      "claude-plan-to-issues",
      "create-branch-on-issue",
      "pr-status-sync",
      "release-status-sync"
    ],
    "disabled": []
  },
  "labels": {
    "status": ["status:ready", "status:in-progress", "status:in-review", "status:to-deploy"],
    "type": ["type:feature", "type:fix", "type:hotfix", "type:docs", "type:refactor", "type:test"],
    "platform": ["platform:mobile", "platform:ios", "platform:android"],
    "priority": ["priority:critical", "priority:high", "priority:medium", "priority:low"]
  },
  "options": {
    "mobile_check": true,
    "integration_tests": true,
    "node_version": "20",
    "pnpm_version": "9",
    "max_tasks_per_plan": 8,
    "rate_limit_threshold": 50,
    "path_filters": {
      "mobile": ["mobile/**", "android/**", "ios/**", "app.json", "metro.config.js"],
      "shared": ["shared/**", "utils/**"]
    },
    "branch_protection": {
      "main": {
        "required_approving_reviews": 1,
        "enforce_admins": true,
        "required_linear_history": true,
        "allow_force_pushes": false
      },
      "dev": {
        "required_approving_reviews": 1,
        "enforce_admins": false,
        "required_linear_history": true,
        "allow_force_pushes": false
      }
    }
  },
  "secrets_required": [
    "PROJECT_URL",
    "ANTHROPIC_API_KEY"
  ],
  "recommended_for": [
    "React Native projects",
    "Expo applications",
    "Native iOS/Android development",
    "Mobile-first applications"
  ]
}
