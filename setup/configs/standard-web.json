{
  "name": "Standard Web Configuration",
  "description": "Balanced setup for small to medium web teams - feature → dev → main workflow",
  "projectType": "web",
  "branchingStrategy": "standard",
  "branches": ["main", "dev"],
  "workflows": {
    "enabled": [
      "bootstrap",
      "reusable-pr-checks",
      "pr-into-dev",
      "dev-to-main",
      "claude-plan-to-issues",
      "create-branch-on-issue",
      "pr-status-sync",
      "release-status-sync"
    ],
    "disabled": []
  },
  "labels": {
    "status": ["status:ready", "status:in-progress", "status:in-review", "status:to-deploy"],
    "type": ["type:feature", "type:fix", "type:hotfix", "type:docs", "type:refactor", "type:test"],
    "platform": ["platform:web"],
    "priority": ["priority:critical", "priority:high", "priority:medium", "priority:low"]
  },
  "options": {
    "mobile_check": false,
    "integration_tests": true,
    "node_version": "20",
    "pnpm_version": "9",
    "max_tasks_per_plan": 10,
    "rate_limit_threshold": 50,
    "branch_protection": {
      "main": {
        "required_approving_reviews": 1,
        "enforce_admins": true,
        "required_linear_history": true,
        "allow_force_pushes": false
      },
      "dev": {
        "required_approving_reviews": 1,
        "enforce_admins": false,
        "required_linear_history": true,
        "allow_force_pushes": false
      }
    }
  },
  "secrets_required": [
    "PROJECT_URL",
    "ANTHROPIC_API_KEY"
  ],
  "recommended_for": [
    "Small to medium teams (2-10 developers)",
    "Production web applications",
    "Balance of speed and safety",
    "Standard agile workflows"
  ]
}
